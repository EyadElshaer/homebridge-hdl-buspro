{
    "pluginAlias": "HDLBusproHomebridge",
    "pluginType": "platform",
    "singular": true,
    "schema": {
        "type": "object",
        "properties": {
            "buses": {
                "title": "Buses",
                "type": "array",
                "required": true,
                "items": {
                    "type": "object",
                    "properties": {
                        "bus_name": {
                            "title": "Bus name",
                            "type": "string",
                            "default": "New bus",
                            "minLength": 1,
                            "required": true
                        },
                        "bus_IP": {
                            "title": "Bus IP address",
                            "type": "string",
                            "format": "ipv4",
                            "placeholder": "10.0.0.1",
                            "required": true
                        },
                        "bus_port": {
                            "title": "Bus port",
                            "type": "integer",
                            "default": 6000,
                            "required": true
                        },
                        "subnets": {
                            "title": "Subnets",
                            "type": "array",
                            "required": true,
                            "items": {
                                "type": "object",
                                "properties": {
                                    "subnet_number": {
                                        "title": "Subnet number",
                                        "type": "number",
                                        "minimum": 0,
                                        "maximum": 254
                                    },
                                    "cd_number": {
                                        "title": "Control device number",
                                        "type": "number",
                                        "minimum": 0,
                                        "maximum": 254
                                    },
                                    "devices": {
                                        "title": "Devices",
                                        "type": "array",
                                        "required": true,
                                        "items": {
                                            "type": "object",
                                            "properties": {
                                                "device_name": {
                                                    "title": "Device Name",
                                                    "type": "string"
                                                },
                                                "device_address": {
                                                    "title": "Device Address",
                                                    "type": "number",
                                                    "minimum": 0,
                                                    "maximum": 254
                                                },
                                                "device_type": {
                                                    "title": "Device type",
                                                    "type": "string",
                                                    "oneOf": [
                                                        { "title": "Relay Lightbulb", "enum": ["relaylightbulb"] },
                                                        { "title": "Relay Dimmable Lightbulb", "enum": ["relaydimmablelightbulb"] },
                                                        { "title": "Relay Lock", "enum": ["relaylock"] },
                                                        { "title": "Dry Contact", "enum": ["drycontact"] },
                                                        { "title": "Sensor", "enum": ["sensor8in1"] },
                                                        { "title": "Relay Curtains", "enum": ["relaycurtains"] },
                                                        { "title": "Relay Curtain Valve", "enum": ["relaycurtainvalve"] },
                                                        { "title": "Relay RGB", "enum": ["relayrgb"] }
                                                    ]
                                                },
                                                "area": {
                                                    "title": "Area",
                                                    "type": "number",
                                                    "minimum": 0,
                                                    "maximum": 254,
                                                    "default": 1
                                                },
                                                "channel": {
                                                    "title": "Device Channel",
                                                    "type": "number",
                                                    "minimum": 0,
                                                    "maximum": 254,
                                                    "condition": {
                                                        "functionBody": "return (['relaylightbulb', 'relaydimmablelightbulb', 'relaylock', 'relaycurtains'].includes(model.buses[arrayIndices[0]].subnets[arrayIndices[1]].devices[arrayIndices[2]].device_type))"
                                                    }
                                                },
                                                "red_channel": {
                                                    "title": "Red Channel",
                                                    "type": "number",
                                                    "minimum": 0,
                                                    "maximum": 254,
                                                    "condition": {
                                                        "functionBody": "return model.buses[arrayIndices[0]].subnets[arrayIndices[1]].devices[arrayIndices[2]].device_type === 'relayrgb';"
                                                    }
                                                },
                                                "green_channel": {
                                                    "title": "Green Channel",
                                                    "type": "number",
                                                    "minimum": 0,
                                                    "maximum": 254,
                                                    "condition": {
                                                        "functionBody": "return model.buses[arrayIndices[0]].subnets[arrayIndices[1]].devices[arrayIndices[2]].device_type === 'relayrgb';"
                                                    }
                                                },
                                                "blue_channel": {
                                                    "title": "Blue Channel",
                                                    "type": "number",
                                                    "minimum": 0,
                                                    "maximum": 254,
                                                    "condition": {
                                                        "functionBody": "return model.buses[arrayIndices[0]].subnets[arrayIndices[1]].devices[arrayIndices[2]].device_type === 'relayrgb';"
                                                    }
                                                },
                                                "duration": {
                                                    "title": "Duration",
                                                    "type": "number",
                                                    "description": "Time taken for curtain to fully open.",
                                                    "minimum": 0,
                                                    "condition": {
                                                        "functionBody": "return model.buses[arrayIndices[0]].subnets[arrayIndices[1]].devices[arrayIndices[2]].device_type === 'relaycurtains';"
                                                    }
                                                },
                                                "curtains_precision": {
                                                    "title": "Curtains position precision (%)",
                                                    "type": "number",
                                                    "description": "Adjust if curtain status gets stuck as 'opening'.",
                                                    "minimum": 0,
                                                    "default": 5,
                                                    "condition": {
                                                        "functionBody": "return model.buses[arrayIndices[0]].subnets[arrayIndices[1]].devices[arrayIndices[2]].device_type === 'relaycurtains';"
                                                    }
                                                }
                                            }
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        }
    },
    "layout": [
        {
            "key": "buses",
            "type": "tabarray",
            "title": "{{ value.bus_name || 'Bus' }}",
            "items": [
                "buses[].bus_name",
                "buses[].bus_IP",
                "buses[].bus_port",
                {
                    "key": "buses[].subnets",
                    "title": "Subnets",
                    "buttonText": "Add Bus Subnet",
                    "type": "array",
                    "expandable": true,
                    "expanded": true,
                    "items": [
                        "buses[].subnets[].subnet_number",
                        "buses[].subnets[].cd_number",
                        {
                            "key": "buses[].subnets[].devices",
                            "buttonText": "Add Device",
                            "type": "array",
                            "expandable": true,
                            "expanded": false,
                            "items": [
                                "buses[].subnets[].devices[].device_name",
                                "buses[].subnets[].devices[].device_address",
                                "buses[].subnets[].devices[].device_type",
                                {
                                    "key": "buses[].subnets[].devices[].channel",
                                    "condition": {
                                        "functionBody": "return (['relaylightbulb', 'relaydimmablelightbulb', 'relaylock', 'relaycurtains'].includes(model.buses[arrayIndices[0]].subnets[arrayIndices[1]].devices[arrayIndices[2]].device_type))"
                                    }
                                },
                                {
                                    "key": "buses[].subnets[].devices[].duration",
                                    "condition": {
                                        "functionBody": "return model.buses[arrayIndices[0]].subnets[arrayIndices[1]].devices[arrayIndices[2]].device_type === 'relaycurtains';"
                                    }
                                },
                                {
                                    "key": "buses[].subnets[].devices[].curtains_precision",
                                    "condition": {
                                        "functionBody": "return model.buses[arrayIndices[0]].subnets[arrayIndices[1]].devices[arrayIndices[2]].device_type === 'relaycurtains';"
                                    }
                                },
                                    {
                                        "key": "buses[].subnets[].devices[].red_channel",
                                        "condition": {
                                            "functionBody": "return model.buses[arrayIndices[0]].subnets[arrayIndices[1]].devices[arrayIndices[2]].device_type === 'relayrgb';"
                                }
                                },
                                    {
                                        "key": "buses[].subnets[].devices[].green_channel",
                                        "condition": {
                                            "functionBody": "return model.buses[arrayIndices[0]].subnets[arrayIndices[1]].devices[arrayIndices[2]].device_type === 'relayrgb';"
                                        }
                                },
                                    {
                                        "key": "buses[].subnets[].devices[].blue_channel",
                                        "condition": {
                                            "functionBody": "return model.buses[arrayIndices[0]].subnets[arrayIndices[1]].devices[arrayIndices[2]].device_type === 'relayrgb';"
                                        }
                                    }
                                ]
                            }
                        ]
                    }
                ]
            }
        ]
    }