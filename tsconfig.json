{
  "compilerOptions": {
    "target": "ES2020", // ✅ Supports async/await properly
    "module": "commonjs",
    "moduleResolution": "node", // ✅ Ensures Smart-Bus & Homebridge work
    "lib": [
      "es2019", // ✅ More modern features
      "es2020"
    ],
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": false, // ✅ Avoids type conversion issues
    "noImplicitAny": false,
    "resolveJsonModule": true // ✅ Fixes potential JSON config issues
  },
  "include": [
    "src/"
  ],
  "exclude": [
    "**/*.spec.ts"
  ]
}
